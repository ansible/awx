input {
	http {
		port => 8085
		user => {{ logstash_username }}
		password => "{{ logstash_password }}"
	}
	udp {
		port => 8086
	}
	tcp {
		port => 8087
	}
}
## Add your filters / logstash plugins configuration here
filter {
	json {
		source => "message"
	}
}
output {
	stdout { codec => rubydebug }
	file {
		path => "/usr/share/logstash/logstash.log"
	}
}

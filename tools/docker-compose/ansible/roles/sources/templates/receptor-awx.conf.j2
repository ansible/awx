---
- node:
    id: awx_{{ item }}

- log-level:
    debug

- tcp-listener:
    port: 2222

{% for i in range(item | int + 1, control_plane_node_count | int + 1) %}
- tcp-peer:
    address: awx_{{ i }}:2222
    redial: true
{% endfor %}

#- tls-server:
